<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/macwall"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="#80FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_insert"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@drawable/bg_arredondado_transparente">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:gravity="bottom|center">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginBottom="10dp"
                                                    android:gravity="center">

                                                    <EditText
                                                        android:id="@+id/cp_nome"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="70dp"
                                                        android:background="@drawable/arredondado_transparente"
                                                        android:ems="10"
                                                        android:hint="Nome"
                                                        android:inputType="textPersonName"
                                                        android:textAlignment="center"
                                                        android:textColorHint="#605E5E"
                                                        android:textSize="18sp" />
                                                </RelativeLayout>

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center">

                                                    <EditText
                                                        android:id="@+id/cp_endereco"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="70dp"
                                                        android:background="@drawable/arredondado_transparente"
                                                        android:ems="10"
                                                        android:hint="EndereÃ§o"
                                                        android:inputType="textPersonName"
                                                        android:textAlignment="center"
                                                        android:textColorHint="#605E5E"
                                                        android:textSize="18sp" />
                                                </RelativeLayout>

                                            </LinearLayout>

                                        </TableRow>

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.4"
                                            android:gravity="center">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                android:layout_weight="1">

                                                <Button
                                                    android:id="@+id/btn_salvar"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:background="@drawable/borda_azul"
                                                    android:text="Salvar"
                                                    android:textColor="#FFFFFF" />
                                            </RelativeLayout>
                                        </TableRow>

                                    </TableLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_update"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@drawable/bg_arredondado_transparente">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:layout_weight="0.15"
                                                android:gravity="center">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="horizontal">

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginRight="2dp"
                                                        android:layout_weight="0.25">

                                                        <EditText
                                                            android:id="@+id/cp_update_pesquisa"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="70dp"
                                                            android:background="@drawable/arredondado_transparente"
                                                            android:ems="10"
                                                            android:hint="Digite o nome para pesquisar"
                                                            android:inputType="textPersonName"
                                                            android:textAlignment="center"
                                                            android:textColorHint="#605E5E"
                                                            android:textSize="18sp" />
                                                    </RelativeLayout>

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="70dp"
                                                        android:layout_weight="1">

                                                        <ImageButton
                                                            android:id="@+id/btn_search_update"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:background="@drawable/arredondado_transparente"
                                                            app:srcCompat="@android:drawable/ic_search_category_default" />

                                                    </RelativeLayout>
                                                </LinearLayout>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginBottom="10dp"
                                                android:layout_weight="10">

                                                <androidx.core.widget.NestedScrollView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fillViewport="true">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="5dp"
                                                        android:orientation="vertical">

                                                        <ListView
                                                            android:id="@+id/lv_update"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent" />
                                                    </LinearLayout>
                                                </androidx.core.widget.NestedScrollView>

                                            </RelativeLayout>

                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <Button
                                            android:id="@+id/btn_updatevalue"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="5dp"
                                            android:background="@drawable/borda_azul"
                                            android:text="Update"
                                            android:textColor="#FFFFFF" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_excluir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@drawable/bg_arredondado_transparente">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:gravity="bottom|center">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <RelativeLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_weight="0.15"
                                                    android:gravity="center">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="horizontal">

                                                        <RelativeLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginRight="2dp"
                                                            android:layout_weight="0.25">

                                                            <EditText
                                                                android:id="@+id/cp_delete_pesquisa"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="70dp"
                                                                android:background="@drawable/arredondado_transparente"
                                                                android:ems="10"
                                                                android:hint="Digite o nome para pesquisar"
                                                                android:inputType="textPersonName"
                                                                android:textAlignment="center"
                                                                android:textColorHint="#605E5E"
                                                                android:textSize="18sp" />
                                                        </RelativeLayout>

                                                        <RelativeLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="70dp"
                                                            android:layout_weight="1">

                                                            <ImageButton
                                                                android:id="@+id/btn_search_delete"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent"
                                                                android:background="@drawable/arredondado_transparente"
                                                                app:srcCompat="@android:drawable/ic_search_category_default" />

                                                        </RelativeLayout>
                                                    </LinearLayout>

                                                </RelativeLayout>

                                            </LinearLayout>

                                        </TableRow>

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.4"
                                            android:gravity="center">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                android:layout_weight="1">

                                                <Button
                                                    android:id="@+id/buttonA3"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:background="@drawable/borda_azul"
                                                    android:text="Deletar"
                                                    android:textColor="#FFFFFF" />
                                            </RelativeLayout>
                                        </TableRow>

                                    </TableLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_listar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:background="@drawable/bg_arredondado_transparente">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">

                                        <TableRow
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:gravity="bottom|center">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:gravity="center">

                                                <ListView
                                                    android:id="@+id/lv1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent" />
                                            </RelativeLayout>

                                        </TableRow>

                                    </TableLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.45"
                    android:background="@drawable/bg_arredondado_transparente">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageButton
                                        android:id="@+id/btn_add"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/borda_azul"
                                        app:srcCompat="@drawable/add64" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageButton
                                        android:id="@+id/btn_update"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/borda_verde"
                                        app:srcCompat="@drawable/update64" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageButton
                                        android:id="@+id/btn_delete"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/borda_vermelha"
                                        app:srcCompat="@drawable/delete64" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <ImageButton
                                        android:id="@+id/btn_list"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/borda_amarela"
                                        app:srcCompat="@drawable/list64" />
                                </RelativeLayout>
                            </TableRow>

                        </TableLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>