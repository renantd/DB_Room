<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/macwall"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:gravity="center|top">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/cp_nome"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:background="@drawable/arredondado_transparente"
                                    android:ems="10"
                                    android:hint="Nome"
                                    android:inputType="textPersonName"
                                    android:textAlignment="center"
                                    android:textColorHint="#605E5E"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/cp_endereco"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:background="@drawable/arredondado_transparente"
                                    android:ems="10"
                                    android:hint="EndereÃ§o"
                                    android:inputType="textPersonName"
                                    android:textAlignment="center"
                                    android:textColorHint="#605E5E"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_btn_salvar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/btn_salvar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/borda_azul"
                                android:text="Salvar"
                                android:textColor="#FFFFFF" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="0.45"
                            android:background="@drawable/bg_arredondado_transparente">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:gravity="center">

                                            <ImageButton
                                                android:id="@+id/btn_add"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:background="@drawable/borda_branca"
                                                app:srcCompat="@drawable/home64" />
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="2dp"
                                            android:layout_weight="1"
                                            android:gravity="center">

                                            <ImageButton
                                                android:id="@+id/btn_update"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:background="@drawable/borda_branca"
                                                app:srcCompat="@drawable/back64" />
                                        </RelativeLayout>

                                    </TableRow>

                                </TableLayout>

                            </LinearLayout>
                        </RelativeLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>