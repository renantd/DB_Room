<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exclusao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/macwall"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#80FFFFFF">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center|top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.15"
                            android:gravity="center">

                            <AutoCompleteTextView
                                android:id="@+id/cp_delete_pesquisa"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:background="@drawable/arredondado_transparente"
                                android:ems="10"
                                android:hint="Digite o nome para pesquisar"
                                android:inputType="textPersonName"
                                android:textAlignment="center"
                                android:textColorHint="#605E5E"
                                android:textSize="18sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="6">

                            <ListView
                                android:id="@+id/lv_deletar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_deletarPessoa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/borda_azul"
                            android:text="Deletar"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.45"
                        android:background="@drawable/bg_arredondado_transparente">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <ImageButton
                                            android:id="@+id/btn_add"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:background="@drawable/borda_branca"
                                            app:srcCompat="@drawable/home64" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <ImageButton
                                            android:id="@+id/btn_update"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:background="@drawable/borda_branca"
                                            app:srcCompat="@drawable/back64" />
                                    </RelativeLayout>

                                </TableRow>

                            </TableLayout>

                        </LinearLayout>
                    </RelativeLayout>

                </TableRow>

            </TableLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>